<script src="https://code.jquery.com/jquery.min.js"></script>
<div id="loadingScreen" class="loadingScreen" style="display: none;">
    <div class="background"></div>
    <div class="content">Loading...</div>
</div>
<script>
    const pageModule = {};
    let process_pending = false;

    function process_pending_on()
    {
        if (process_pending)
            alert("Error: Process is already pending.");
        process_pending = true;
        $("#loadingScreen").css("display", "block");
    }
    function process_pending_off()
    {
        if (!process_pending)
            alert("Error: Process is inactive.");
        process_pending = false;
        $("#loadingScreen").css("display", "none");
    }
</script>