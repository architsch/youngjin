{
  "apphosting": [
    {
      "backendId": "thingspool",
      "rootDir": "./",
      "ignore": [
        ".git",
        ".continue",
        ".github",
        ".husky",
        ".vscode",
        "node_modules",
        "public",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "functions"
      ],
      "alwaysDeployFromSource": false
    }
  ],
  "firestore": {
    "location": "nam5",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules",
    "bucket": "thingspool.firebasestorage.app"
  },
  "emulators": {
    "apphosting": {
      "port": 3000,
      "rootDirectory": "./",
      "startCommand": "GCLOUD_PROJECT=\"thingspool\" FIRESTORE_EMULATOR_HOST=\"localhost:8080\" FIREBASE_STORAGE_EMULATOR_HOST=\"localhost:9199\" pm2 start ./dev/scripts/devRunner.js --no-daemon --watch --ignore-watch=\"dist public .git\""
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199,
      "bucket":"thingspool.firebasestorage.app"
    },
    "ui": {
      "port": 4000,
      "enabled": true
    },
    "singleProjectMode": true
  }
}
